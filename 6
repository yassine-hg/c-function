#include <stdio.h>
#include<math.h>



void printMultiples(int x){
    for(int i=1 ; i < x ; i++){
        printf("%d x %d = %d\n", x, i, x*i);
    }
}

int main(){
    int a ;
    char response = 'y';

    printf("Enter an integer between(1) and (100): ");
    scanf("%d" , &a);
    printMultiples(a);



    while(response == 'y' || response == 'Y') {
        printf("If you want to continue, press 'y' or 'Y' if not click (n) or (N): ");
        scanf(" %c", &response);

    if (response == 'y' || response == 'Y') {
        printf("Enter an integer between 1 and 100: ");
        scanf("%d", &a);
        printMultiples(a);
    } else {
        printf("Invalid input. Please enter 'y' or 'Y'.\n");
    }
}

}
